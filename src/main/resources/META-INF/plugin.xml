<idea-plugin>
    <id>com.software.codetime</id>
    <name>Code Time</name>
    <vendor url="https://www.software.com">Software.com</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Dashboard" order="first" secondary="false" anchor="right"
                    icon="/assets/paw-grey-rotated.png"
                    factoryClass="com.software.codetime.dashboard.DashboardWindowFactory"/>
    </extensions>

    <applicationListeners>
        <listener class="com.software.codetime.listeners.ProjectActivateListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
